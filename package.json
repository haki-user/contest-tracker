{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:api": "turbo run build --filter api",
    "build:extension": "turbo run build --filter extension",
    "clean": "turbo run clean",
    "dev": "turbo run dev --concurrency 1000",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "apps/**/*.{js, jsx, ts, tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "packages/**/*.{js, jsx, ts, tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
